---
import "../global.css";
import ThemeIcon from "../components/ThemeIcon.astro";
import SEO from "../components/SEO.astro";

export interface Props {
	title?: string
	canonical?: string
}

const { title, canonical } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<SEO title={title} canonical={canonical} />
		<link rel="sitemap" href="/sitemap-index.xml" />
	</head>
	<body class="max-w-prose mx-auto bg-[#FAFAFA] dark:bg-[#121212] transition-colors px-5 lg:px-0">
		<div class="flex justify-between items-center py-4">
			{!Astro.url.pathname || Astro.url.pathname === '/' ? (
				<div></div>
			) : (
				<a href="/" class="text-gray-500 dark:text-neutral-400 hover:text-black dark:hover:text-white transition-colors">
					Home
				</a>
			)}
			<ThemeIcon />
		</div>
		<div class="my-20 mb-40">
			<slot />
		</div>
	</body>
</html>
